{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@theme/*": ["src/theme/*"]
    }
  },
  "@theme/*": ["src/theme/*"],
  "include": [
    "src/**/*",
    "docusaurus.config.ts",
    "src/pages/**/*",
    "docs/**/*",
    "*.mdx",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
